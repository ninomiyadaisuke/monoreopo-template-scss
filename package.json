{
  "name": "monoreopo-template",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/react-scroll": "^1.8.5",
    "@types/react-transition-group": "^4.4.5",
    "eslint-config-custom": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "next-sitemap": "^3.1.43",
    "npm-run-all": "^4.1.5",
    "prettier": "latest",
    "sass": "^1.57.1",
    "ts-loader": "^9.4.2",
    "turbo": "latest",
    "typed-scss-modules": "^7.0.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.11.0",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "jotai": "^1.12.0",
    "react-helmet-async": "^1.3.0",
    "react-scroll": "^1.8.9",
    "react-transition-group": "^4.4.5",
    "scrolltrigger": "^1.0.1",
    "use-breakpoint": "^3.0.6"
  }
}
